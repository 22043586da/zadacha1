      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:задача_1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="main">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:Name="d" FontSize="25" FontWeight="ExtraBlack" Text="Для начала введи как тебя зовут"/>
            <TextBox x:Name="txName" Width="250" Margin="0,20,0,0" ></TextBox>
            <Button Click="Button_Click" Width="0" Height="0" IsDefault="True" ></Button>
        </StackPanel>
    </Grid>
</Page>
